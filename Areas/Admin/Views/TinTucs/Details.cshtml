@model DoAn.Models.TinTuc

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section naviheader{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/Admin/Home" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="~/admin/sanphams" class="nav-link">Tin tức</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Chi tiết</a>
        </li>
    </ul>
}

<!-- Content Wrapper. Contains page content -->
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                @*<h1>Thêm mới danh mục</h1>*@
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="~/admin/sanphams">Quản lý bài viết</a></li>
                    <li class="breadcrumb-item active">Chi tiết bài viết</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<section class="content">
    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Chi Tiết Tin Tức</h3>
        </div>
        <div class="card-body">
            <div class="bs-stepper-content">
                <div class="col-md-10">
                    <dl class="dl-horizontal">
                        <dt>
                            <label>Người Tạo</label>
                        </dt>

                        <dd>
                            <p>@Model.KhachHang.hoten</p>
                        </dd>

                        <dt>
                            <label>Tiêu Đề</label>
                        </dt>

                        <dd>
                            <p>@Model.tieude</p>
                        </dd>

                        <dt>
                            <label>Hình Ảnh</label>
                        </dt>

                        <dd>
                            <img src="@Url.Content("~/wwwroot/tintuc/" + Model.hinhanh)" class="img-rounded" width="150" height="150" />
                        </dd>

                        <dt>
                            <label>Ngày Tạo</label>
                        </dt>

                        <dd>
                            <p>@Model.ngaytao.ToString("dd/MM/yyyy")</p>
                        </dd>

                        @*<dt>
                            @Html.DisplayNameFor(model => model.gioithieu)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.gioithieu)
                        </dd>*@

                        <dt>
                            <label>Trạng Thái</label>
                        </dt>

                        <dd>
                            @if(Model.trangthai == true)
                            {
                                <p>Hiển thị</p>
            }
                            else
                            {
                                <p>Ẩn</p>
                            }
                        </dd>

                        <dt>
                            <label>Nội Dung</label>
                        </dt>

                        <dd>
                            <p>@Model.noidung</p>
                        </dd>

                    </dl>
                </div>
                <p>
                    @Html.ActionLink("Edit", "Edit", new { id = Model.matintuc }) |
                    @Html.ActionLink("Back to List", "Index")
                </p>

            </div>
        </div>
    </div>
</section>