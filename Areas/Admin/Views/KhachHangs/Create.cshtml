<!-- Content Wrapper. Contains page content -->
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                @*<h1>Thêm mới danh mục</h1>*@
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="~/admin/khachhangs">Quản ly tài khoản</a></li>
                    <li class="breadcrumb-item active">Thêm mới</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Thông tin tài khoản thêm mới</h3>

        </div>
        <div class="card-body">
            <div class="bs-stepper-content">
                @using (Html.BeginForm("Create", "khachhangs", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    <!-- your steps content here -->
                    <div id="logins-part" class="content active dstepper-block" role="tabpanel" aria-labelledby="logins-part-trigger">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Họ tên</label>
                            @Html.TextBoxFor(x => x.hoten, new { @class = "form-control", @placeholder = "Tên danh mục" })
                            @Html.ValidationMessageFor(x => x.hoten, null, new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label for="exampleInputEmail1">Địa chỉ</label>
                            @Html.TextBoxFor(x => x.diachi, new { @class = "form-control", @placeholder = "Địa chỉ" })
                            @Html.ValidationMessageFor(x => x.diachi, null, new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label for="exampleInputEmail1">Điện thoại</label>
                            @Html.TextBoxFor(x => x.dienthoai, new { @class = "form-control", @placeholder = "Điện thoại" })
                            @Html.ValidationMessageFor(x => x.dienthoai, null, new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label for="exampleInputEmail1">Email</label>
                            @Html.TextBoxFor(x => x.email, new { @class = "form-control", @placeholder = "Email" })
                            @Html.ValidationMessageFor(x => x.email, null, new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label for="exampleInputEmail1">Mật khẩu</label>
                            @Html.TextBoxFor(x => x.matkhau, new { @class = "form-control", @placeholder = "Mật khẩu" })
                            @Html.ValidationMessageFor(x => x.matkhau, null, new { @class = "text-danger" })
                        </div>

                        @*<div class="form-group">
                            <label for="exampleInputEmail1">Chức vụ</label>
                            <div class="col-md-10">
                                <div class="checkbox">
                                    @Html.EditorFor(model => model.chucvu)
                                    @Html.ValidationMessageFor(model => model.chucvu, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="exampleInputEmail1">Trạng thái</label>
                            <div class="col-md-10">
                                <div class="checkbox">
                                    @Html.EditorFor(model => model.trangthai)
                                    @Html.ValidationMessageFor(model => model.trangthai, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>*@
                    </div>
                    <div id="information-part" class="content" role="tabpanel" aria-labelledby="information-part-trigger">
                        <a href="/admin/khachhangs" class="btn btn-danger">Quay lại</a>
                        <input type="submit" class="btn btn-primary float-right" value="Thêm mới">
                    </div>
                }

            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">

        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->
</section>
