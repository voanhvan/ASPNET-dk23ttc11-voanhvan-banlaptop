<body>
    <div class="page-wrapper">
        <main class="main">
            <div class="login-page bg-image pt-8 pb-8 pt-md-12 pb-md-12 pt-lg-17 pb-lg-17" style="height: 100vh; background-image: url('/wwwroot/images/login.jpg')">
                <div class="container">
                    <div class="form-box">
                        <div class="form-tab">
                            <ul class="nav nav-pills nav-fill" role="tablist">
                                <li class="nav-item">
                                    <a class="nav-link active" id="signin-tab-2" data-toggle="tab" href="#signin-2" role="tab" aria-controls="signin-2" aria-selected="false">ĐĂNG NHẬP</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" id="register-tab-2" data-toggle="tab" href="#register-2" role="tab" aria-controls="register-2" aria-selected="true">ĐĂNG KÝ</a>
                                </li>
                            </ul>
                            <div class="tab-content">
                                <div class="tab-pane fade active show" id="signin-2" role="tabpanel" aria-labelledby="signin-tab-2">
                                    <form action="~/Login/DangNhap" method="post">
                                        <div class="form-group">
                                            <label for="singin-email-2">Địa chỉ email *</label>
                                            <input type="text" class="form-control" id="singin-email-2" name="email" required>
                                        </div>

                                        <div class="form-group">
                                            <label for="singin-password-2">Mật khẩu *</label>
                                            <input type="password" class="form-control" id="singin-password-2" name="password" required>
                                        </div>

                                        <div class="form-footer">
                                            <button type="submit" class="btn btn-outline-primary-2">
                                                <span>Đăng Nhập</span>
                                                <i class="icon-long-arrow-right"></i>
                                            </button>

                                            <div class="custom-control custom-checkbox">
                                                <input type="checkbox" class="custom-control-input" id="signin-remember-2">
                                                <label class="custom-control-label" for="signin-remember-2">Nhớ tài khoản</label>
                                            </div>

                                            <a href="#" class="forgot-link">Quên mật khẩu?</a>
                                        </div>
                                    </form>
                                    <div class="form-choice">
                                        <p class="text-center">Hoặc</p>
                                        <div class="row">
                                            <div class="col-sm-6">
                                                <a href="" class="btn btn-login btn-g">
                                                    <i class="icon-google"></i>
                                                    Đăng nhập Google
                                                </a>
                                            </div>
                                            <div class="col-sm-6">
                                                <a href="#" class="btn btn-login btn-f">
                                                    <i class="icon-facebook-f"></i>
                                                    Đăng nhập với Facebook
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="tab-pane fade " id="register-2" role="tabpanel" aria-labelledby="register-tab-2">
                                    <form action="">
                                        <div class="form-group">
                                            <label for="register-email-2">Họ tên *</label>
                                            <input type="text" class="form-control" id="rten" name="rhoten" required>
                                        </div>
                                        <div class="form-group">
                                            <label for="register-email-2">Địa chỉ email *</label>
                                            <input type="email" class="form-control" id="remail" name="remail" required>
                                        </div>

                                        <div class="form-group">
                                            <label for="register-password-2">Mật khẩu *</label>
                                            <input type="password" class="form-control" id="rpass" name="rpassword" required>
                                        </div>
                                        <div class="form-group">
                                            <label for="register-password-2">Xác thực mật khẩu *</label>
                                            <input type="password" class="form-control" id="rrpass" name="rrpassword" required>
                                        </div>

                                        <div class="form-footer">
                                            <button type="submit" id="dangky" class="btn btn-outline-primary-2">
                                                <span>Đăng Ký</span>
                                                <i class="icon-long-arrow-right"></i>
                                            </button>

                                            <div class="custom-control custom-checkbox">
                                                <input type="checkbox" class="custom-control-input" id="register-policy-2" required>
                                                <label class="custom-control-label" for="register-policy-2">Tôi đồng ý với <a href="#">Chính sách bảo mật</a> *</label>
                                            </div>
                                        </div>
                                    </form>
                                    <div class="form-choice">
                                        <p class="text-center">Hoặc</p>
                                        <div class="row">
                                            <div class="col-sm-6">
                                                <a href="#" class="btn btn-login btn-g">
                                                    <i class="icon-google"></i>
                                                    Đăng nhập Google
                                                </a>
                                            </div>
                                            <div class="col-sm-6">
                                                <a href="#" class="btn btn-login  btn-f">
                                                    <i class="icon-facebook-f"></i>
                                                    Đăng nhập Facebook
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>

    </div>
