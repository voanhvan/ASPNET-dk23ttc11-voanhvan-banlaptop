    <script src="~/Content/assets/js/jquery.countdown.min.js"></script>

    <!-- Main JS File -->
    <script src="~/Content/assets/js/main.js"></script>
    <script src="~/Content/assets/js/demos/demo-13.js"></script>

    <script>
    $(document).ready(function () {
        $('#dangky').click(function (event) {
            event.preventDefault();
            var hoten = document.getElementById('rten').value;
            var mail = document.getElementById('remail').value;
            var pass1 = document.getElementById('rpass').value;
            var pass2 = document.getElementById('rrpass').value;
            console.log(hoten, mail, pass1, pass2);
            $.ajax({
                url: '@Url.Action("DangKy", "Login")',
                type: 'POST',
                data: { hoten: hoten, email: mail, pass: pass1, repass: pass2 },
                success: function(result) {
                    if (result.success) {
                        toastr.success("Đăng ký thành công", "Thành Công");
                        setTimeout(function () {
                            window.location.reload();
                        }, 2000);

                    } else {
                        toastr.error("Mật khẩu chưa trùng khớp", "Không Thành Công", { timeOut: 3000 });
                    }
                },
                error: function() {
                    alert('Đã xảy ra lỗi!');
                }
            });

        });
    });
    </script>
    <script src="~/Scripts/toastr.js"></script>
